{
  "name": "@jungle-gaming/tasks-service",
  "version": "1.0.0",
  "description": "Tasks service for Jungle Gaming Task Management",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "dev": "nest start --watch",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "db:migrate": "typeorm migration:run -d src/database/data-source.ts",
    "db:seed": "tsx src/database/seed.ts"
  },
  "dependencies": {
    "@jungle-gaming/entities": "workspace:*",
    "@jungle-gaming/types": "workspace:*",
    "@jungle-gaming/utils": "workspace:*",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.0.5",
    "@nestjs/microservices": "^11.0.1",
    "@nestjs/passport": "^11.0.0",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^11.0.0",
    "amqplib": "^0.10.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.26"
  },
  "devDependencies": {
    "@jungle-gaming/tsconfig": "workspace:*",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/amqplib": "^0.10.4",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/passport-jwt": "^3.0.13",
    "@types/pg": "^8.10.9",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.57.0",
    "tsx": "^4.7.0",
    "typescript": "^5.6.0",
    "vitest": "^3.2.4"
  }
}